<div class="flex justify-center">
  <div class="card w-96 bg-base-100 shadow-xl mt-10">
    <div class="card-body">
      <h1 class="card-title justify-center">ユーザー登録</h1>
      <%= form_with model: @user, local: true, class: 'flex-col' do |f| %>
        <div class="form-control">
          <%= f.label :email, class: 'label' %>
          <%= f.email_field :email, class: 'input input-bordered w-full max-w-xs' %>
        </div>
        <div class="form-control">
          <%= f.label :name, class: 'label' %>
          <%= f.text_field :name, class: 'input input-bordered w-full max-w-xs' %>
        </div>
        <div class="form-control">
          <%= f.label :age, class: 'label' %>
          <%= f.select :age, User.ages.to_a, {}, class: 'select select-bordered select-sm w-full max-w-xs mb-2' %>
        </div>
        <div class="form-control space-x-2 space-y-2">
          <%= f.label :gender %>
          <label class="flex justify-start cursor-pointer">
            <%= f.radio_button :gender, :others, class: 'radio checked:bg-red-500 radio-sm', checked: true %>
            <%= f.label :gender, :others, class: 'label-text font-mono ml-2' %>
          </label>
          <label class="flex justify-start cursor-pointer">
            <%= f.radio_button :gender, :male, class: 'radio checked:bg-red-500 radio-sm' %>
            <%= f.label :gender, :male, class: 'label-text font-mono ml-2' %>
          </label>
          <label class="flex justify-start cursor-pointer ">
            <%= f.radio_button :gender, :female, class: 'radio checked:bg-red-500 radio-sm' %>
            <%= f.label :gender, :female, class: 'label-text font-mono ml-2' %>
          </label>
        </div>
        <div class="form-control">
          <%= f.label :password, class: 'label' %>
          <%= f.password_field :password, class: 'input input-bordered w-full max-w-xs' %>
        </div>
        <div class="form-control">
          <%= f.label :password_confirmation, class: 'label' %>
          <%= f.password_field :password_confirmation, class: 'input input-bordered w-full max-w-xs' %>
        </div>
        <div class="card-actions justify-center mt-3">
          <%= f.submit '登録する', class: 'btn btn-primary rounded-full' %>
        </div>
      <% end %>
      <%= link_to 'ログインページへ', login_path, class: 'link link-primary flex justify-center' %>
    </div>
  </div>
</div>
