<% set_meta_tags( title: 'オコゴトに解説を追加' ) %>
<div class="flex justify-center">
  <div class="card w-96 bg-base-100 shadow-xl my-12 outline-dashed outline-gray-300">
    <div class="card-body">
      <h2 class="text-secondary"><%= t('.created_image') %></h2>
      <%= image_tag @post.kogoto_image.url %>
      <%= form_with model: @post, url: posts_path(id: @post.id), local: true, class: 'flex-col' do |f| %>
        <div class="form-control">
          <%= f.label :comment, class: 'label text-secondary' %>
          <%= f.text_area :comment, class: 'textarea textarea-primary border-dashed textarea-bordered text-primary placeholder-primary', placeholder: t('.comment') %>
        </div>
        <%= f.label :tag_id, Tag.model_name.human, class: 'label text-secondary' %>
        <%= f.collection_select(:tag_id, @tags, :id, :situation, { prompt: t('.tag') }, { class: 'select select-primary text-primary border-dashed select-bordered select-sm w-full max-w-xs mb-2' }) %>
        <div class="card-actions justify-center mt-6">
          <%= f.submit t('.post_create'), class: 'btn btn-secondary text-white rounded-full' %>
        </div>
      <% end %>
      <div class="flex justify-center">
        <%= button_to t('.delete_post'), post_path(@post),
                                        class: 'btn btn-primary btn-outline border-dashed whitespace-nowrap rounded-full mt-2',
                                        method: :delete,
                                        data: { turbo_confirm: t('.delete_check') } %>
      </div>
    </div>
  </div>
</div>

